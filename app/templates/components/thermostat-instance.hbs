<td>
  <button type="button" class="btn btn-default btn-lg">
    <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"{{action 'increaseTemp'}}></span>
  </button>
  <button type="button" class="btn btn-default btn-lg">
    <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"{{action 'decreaseTemp'}}></span>
  </button>
</td>
<td>
  <div class='container'>
    {{#if thermostat.heat}}
      <div class='card temp heat'>
        <div class='inner'>
          <div class='icon'></div>
          <div class='title'>
            <div class='text'>Temperature - Heating</div>
          </div>
          <div class='number set'>
            <div>{{thermostat.tempset}}</div>
            <div class='measure'>Set</div>
          </div>
          <div class='number actual'>
            <div>{{thermostat.tempactual}}</div>
            <div class='measure'>Actual</div>
          </div>
        </div>
      </div>
    {{else}}
      <div class='card temp cool'>
        <div class='inner'>
          <div class='icon'></div>
          <div class='title'>
            <div class='text'>Temperature - Cooling</div>
          </div>
          <div class='number set'>
            <div>{{thermostat.tempset}}</div>
            <div class='measure'>Set</div>
          </div>
          <div class='number actual'>
            <div>{{thermostat.tempactual}}</div>
            <div class='measure'>Actual</div>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</td>
